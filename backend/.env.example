# =============================================================================
# Backend Environment Variables
# =============================================================================
# For Docker: Use the root .env file (docker-compose reads from there)
# For local dev (without Docker): Copy this to .env and fill in values
# =============================================================================

NODE_ENV=local
PORT=9000

# Database (for local dev, use your local DB; Docker overrides these)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=root
DB_NAME=test_db

# S3 Configuration - see root .env.example for details
S3_ENDPOINT=
S3_PUBLIC_ENDPOINT=
AWS_ACCESS_KEY=
AWS_SECRET_KEY=
AWS_BUCKET_REGION=us-east-1
AWS_BUCKET_NAME=
